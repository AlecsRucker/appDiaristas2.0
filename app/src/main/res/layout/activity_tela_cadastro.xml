<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TelaCadastro">


    <TextView
        android:id="@+id/VamosComeçar"
        android:layout_width="275dp"
        android:layout_height="62dp"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:text="Vamos Começar"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/email"
        android:layout_width="297dp"
        android:layout_height="49dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="50dp"
        android:hint="Email:"
        android:inputType="textEmailAddress"
        android:textSize="18sp"
        android:focusable="true"
        android:enabled="true"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.357"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Nome" />

    <EditText
        android:id="@+id/Nome"
        android:layout_width="302dp"
        android:layout_height="61dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="50dp"
        android:hint="Nome Completo:"
        android:inputType="textPersonName"
        android:focusable="true"
        android:enabled="true"
        android:clickable="true"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/VamosComeçar" />

    <EditText
        android:id="@+id/CPF"
        android:layout_width="300dp"
        android:layout_height="53dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="50dp"
        android:hint="CPF:"
        android:inputType="numberDecimal"
        android:focusable="true"
        android:enabled="true"
        android:clickable="true"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email" />

    <EditText
        android:id="@+id/idade"
        android:layout_width="297dp"
        android:layout_height="51dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="50dp"
        android:hint="Idade:"
        android:inputType="numberDecimal"
        android:focusable="true"
        android:enabled="true"
        android:clickable="true"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.38"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CPF" />

    <EditText
        android:id="@+id/senha"
        android:layout_width="299dp"
        android:layout_height="52dp"
        android:layout_marginTop="20dp"
        android:hint="Senha:"
        android:inputType="textPassword"
        android:focusable="true"
        android:enabled="true"
        android:clickable="true"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idade" />

    <EditText
        android:id="@+id/confirmarSenha"
        android:layout_width="299dp"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        android:hint="Comfirmar senha:"
        android:inputType="textPassword|numberPassword"
        android:textSize="18sp"
        android:focusable="true"
        android:enabled="true"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/senha" />

    <Button
        android:id="@+id/bt_cadastrar"
        android:layout_width="223dp"
        android:layout_height="60dp"
        android:layout_marginTop="25dp"
        android:text="CADASTRAR"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirmarSenha" />

</androidx.constraintlayout.widget.ConstraintLayout>